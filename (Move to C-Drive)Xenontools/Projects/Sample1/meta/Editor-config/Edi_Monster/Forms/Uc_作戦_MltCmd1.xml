<?xml version="1.0" encoding="Shift_JIS" ?>
                                    <!-- ↓このバージョン番号の説明は
                                           Aa_Editor.xml参照 -->
<codefile-controls codefile-version="2.0">


    <!--
      このコントロールの紹介
    ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
        ■
      ■■■ 行動回数の最大値
        ■
                                        [記号] Uc:作戦_MltCmd1;
                                        [種類] 数上下ボックス（C:Num;）
                                        [画面] メイン画面（Ufo:メイン;）
                                                    （Forms/Ufo_メイン.csv）

                モンスターのコマンド入力の最高回数を
                入力させます。

    ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
    -->
    <control>


        <!--
          データの設定
        ┌──────────────────────────────────┐
            ■■
          ■  ■ データ読取元
            ■■
                    敵作戦テーブル（①）の、現在選択中の敵モンスターに該当する
                    行（③※脚注）の、MltCmd1列（②）。

          ■■
          ■  ■ データ変更先
          ■■
                    同上。

        -->
        <data access="from,to" memory="cell">
            <fnc name="Sf:Cell;">
                <arg name="Pm:select;" value="MltCmd1" /><!-- ② -->
                <arg name="Pm:from;" value="Ut:敵作戦;" /><!-- ① -->
                <fnc name="Sf:Where;">
                    <!-- ③ -->
                    <fnc name="Sf:RecCond;">
                       <arg name="Pm:field;" value="ID" /><!-- ④ -->
                       <f-var value="Ui:選択モンスターID;" /><!-- ⑤ -->
                    </fnc>
                </fnc>
            </fnc>
        </data>
        <!--
        ├──────────────────────────────────┤
          ※③脚注
                レコードを選ぶ条件を指定します。
                ID 列（④）が、「Ui:選択モンスターID;」変数（⑤）の
                内容と一致すること。
        └──────────────────────────────────┘
        -->


        <!--
          イベントの設定
        ┌──────────────────────────────────┐
            ■
          ■  ■ このコントロールで変更作業をした時（①）。
            ■

              （１）このコントロールの内容を、
                    ［データの設定］で指定した変更先に格納します。
        -->
        <event name="Se:値変更時;"><!-- ① -->
            <fnc name="Sf:入力値の確定;" /><!-- （１） -->
        </event>
        <!--
        └──────────────────────────────────┘
        -->


    </control>


</codefile-controls>

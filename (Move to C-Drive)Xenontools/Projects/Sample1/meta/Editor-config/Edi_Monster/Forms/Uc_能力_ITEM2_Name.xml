<?xml version="1.0" encoding="Shift_JIS" ?>
                                    <!-- ↓このバージョン番号の説明は
                                           Aa_Editor.xml参照 -->
<codefile-controls codefile-version="2.0">


    <!--
      このコントロールの紹介
    ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
        ■
      ■■■ ドロップアイテム・ツー名前テキストボックス
        ■
                                        [記号] Uc:作戦_ITEM2_Name;
                                        [種類] テキストボックス（C:Txt;）
                                        [画面] メイン画面（Ufo:メイン;）
                                                    （Forms/Ufo_メイン.csv）

                モンスターのドロップアイテム２の、名前を
                表示します。

    ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
    -->
    <control>


        <!--
          データの設定
        ┌──────────────────────────────────┐
            ■■
          ■  ■ データ読取元
            ■■
                    アイテムテーブルの NAME 列。
                    
                    求め方
                        敵テーブルの、現在選択中のモンスタ
                        ーに該当する行の、ITEM2 列の値を見
                        て、
                        
                        アイテムテーブルの ID 列から一致す
                        るレコードを探し、そのNAME 列の値
                        を表示します。

                        （※脚注ａ）

          ■■
          ■  ■ データ変更先
          ■■
                    なし。

        -->
        <data access="from" memory="none">
            <fnc name="Sf:Cell;">
                <arg name="Pm:select;" value="NAME" /><!-- ② -->
                <arg name="Pm:from;" value="Ut:アイテム;" /><!-- ① -->
                <fnc name="Sf:Where;">
                    <!-- ③ -->
                    <fnc name="Sf:RecCond;">
                        <arg name="Pm:field;" value="ID" /><!-- ④ -->
                        <!-- ⑤ -->
                        <fnc name="Sf:Cell;">
                            <arg name="Pm:select;" value="ITEM2" /><!-- ⑦ -->
                            <arg name="Pm:from;" value="Ut:敵;" /><!-- ⑥ -->
                            <fnc name="Sf:Where;">
                                <!-- ⑧ -->
                                <fnc name="Sf:RecCond;">
                                    <arg name="Pm:field;" value="NO" /><!-- ⑨ -->
                                    <f-var value="Ui:選択モンスターRNo;" /><!-- ⑩ -->
                                </fnc>
                            </fnc>
                        </fnc>
                    </fnc>
                </fnc>
            </fnc>
        </data>
        <!--
        ├──────────────────────────────────┤
        ※脚注ａ
            ・このコントロールは、
                アイテムテーブル（①）の NAME 列（②）を読取します。
                
            ・レコードを選ぶ条件を指定します。（③）
                ID 列（④）が、見つけたい値（⑤）と一致すること。ここで、⑤の
                値は別のテーブルから検索して見つけたものを持ってきます。
                
            ・⑤の値を選ぶ方法を指定します。
                    敵テーブル（⑥）の ITEM2 列（⑦）から探しだした値とします。
                    
                    ・レコードを選ぶ条件を指定します。（⑧）
                        NO 列（⑨）が、「Ui:選択モンスターRNo;」変数（⑩）の
                        内容と一致すること。
        └──────────────────────────────────┘
        -->


    </control>


</codefile-controls>

            <fnc name="Uf:COND00;"><!-- ① -->
                <arg name="Pm:Abcd;" value="あららりるれろ" /><!-- ② -->
            </fnc>
        </data>
        <!--
        ├──────────────────────────────────┤
          ※脚注

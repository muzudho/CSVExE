<?xml version="1.0" encoding="Shift_JIS" ?>
                                    <!-- ↓このバージョン番号の説明は
                                           Aa_Editor.xml参照 -->
<codefile-controls codefile-version="2.0">


    <!--
      このコントロールの紹介
    ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
        ■
      ■■■ オプション・チェックボックス
        ■
                                        [記号] Uc:作戦_OPT00;
                                        [種類] チェックボックス（C:Chk;）
                                        [画面] メイン画面（Ufo:メイン;）
                                                    （Forms/Ufo_メイン.csv）

                モンスターの所持スキルに、使用条件を付ける
                かどうかを選ばせます。

    ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
    -->
    <control>


        <!--
          データの設定
        ┌──────────────────────────────────┐
            ■■
          ■  ■ データ読取元
            ■■
                    敵作戦テーブル（①）の、現在選択中の敵モンスターに該当する
                    行（③※脚注）の、OPT*列（②※脚注）。

          ■■
          ■  ■ データ変更先
          ■■
                    同上。

        -->
        <data access="from,to" memory="cell">
            <fnc name="Sf:Cell;">
                <arg name="Pm:select;" description="select属性が「OPT10～OP29」">
                    <!-- ② -->
                    <f-str value="OPT" />
                    <f-var value="Ui:選択スキルリストID;" />
                </arg>
                <arg name="Pm:from;" value="Ut:敵作戦;" /><!-- ① -->
                <fnc name="Sf:Where;">
                    <!-- ③ -->
                    <fnc name="Sf:RecCond;">
                       <arg name="Pm:field;" value="ID" /><!-- ④ -->
                       <f-var value="Ui:選択モンスターID;" /><!-- ⑤ -->
                    </fnc>
                </fnc>
            </fnc>
        </data>
        <!--
        ├──────────────────────────────────┤
          ※③脚注
                レコードを選ぶ条件を指定します。
                ID 列（④）が、「Ui:選択モンスターID;」変数（⑤）の
                内容と一致すること。
        ├──────────────────────────────────┤
        ・※②脚注
            別の「Uc:作戦_skillLst;」リストボックス・コントロールで項目を選ぶと
            「Ui:選択スキルリストID;」変数の内容が「10」「11」と変わるようにして
            あり、
            そのリストボックスで「10」を選んでいるときは「OPT10」フィールド、
            そのリストボックスで「11」を選んでいるときは「OPT11」フィールド、
            といったように、
            そのリストボックスで選んでいる項目によってデータを取り出すフィールド
            を変えるために、
                フィールド名の変わらない部分に<f-str>を、
                フィールド名の変わる部分に    <f-var>を使って、
            フィールド名を可変にしています。
        └──────────────────────────────────┘
        -->


        <!--
          イベントの設定
        ┌──────────────────────────────────┐
            ■
          ■  ■ このコントロールで変更作業をした時（①）。
            ■

              （１）「Us:作戦_OPT_chk値;」変数（②）に、このコントロールの値（
                    ③）を格納します。
                    
              （２）「Uc:作戦_OPT00_Ara;」エリア・コントロール（④）の不可視／
                    可視を、「Us:作戦_OPT_chk値;」変数（⑤）の値で指定します。
                  ・どの値が不可視で、どの値が可視かは、レイアウト・テーブルの
                    CHK_VALUE_TYPE フィールドで指定します。
                        「ZERO_ONE」→0,1
                        「無指定」→false,true
        -->
        <event name="Se:項目選択時;"><!-- ① -->
            <fnc name="Sf:変数設定;"><!-- （１） -->
                <arg name="Pm:name-var;" value="Us:作戦_OPT_chk値;" /><!-- ② -->
                <arg name="Pm:value;">
                    <fnc name="Sf:Value-Control;" /><!-- ③ -->
                </arg>
            </fnc>
            <fnc name="Sf:可視化;"><!-- （２） -->
                <arg name="Pm:name-control;" value="Uc:作戦_OPT00_Ara;" /><!-- ④ -->
                <arg name="Pm:value-visibled;">
                    <f-var value="Us:作戦_OPT_chk値;" /><!-- ⑤ -->
                </arg>
            </fnc>
        </event>
        <!--
        └──────────────────────────────────┘
        -->
    </control>


</codefile-controls>

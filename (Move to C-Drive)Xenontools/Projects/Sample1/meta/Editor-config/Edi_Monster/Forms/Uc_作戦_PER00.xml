<?xml version="1.0" encoding="Shift_JIS" ?>
                                    <!-- ↓このバージョン番号の説明は
                                           Aa_Editor.xml参照 -->
<codefile-controls codefile-version="2.0">


    <!--
      このコントロールの紹介
    ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
        ■
      ■■■ 性格
        ■
                                        [記号] Uc:作戦_PER00;
                                        [種類] 数上下ボックス（C:Num;）
                                        [画面] メイン画面（Ufo:メイン;）
                                                    （Forms/Ufo_メイン.csv）

                モンスターの所持スキル毎に、使い方の個性を
                選ばせます。

    ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
    -->
    <control>


        <!--
          データの設定
        ┌──────────────────────────────────┐
            ■■
          ■  ■ データ読取元
            ■■
                    敵作戦テーブル（①）の、現在選択中の敵モンスターに該当する
                    行（③※脚注）の、PER*列（②※脚注）。

          ■■
          ■  ■ データ変更先
          ■■
                    同上。

        -->
        <data access="from,to" memory="cell">
            <fnc name="Sf:Cell;">
                <arg name="Pm:select;" description="select属性が「PER10～」">
                    <!-- ② -->
                    <f-str value="PER" />
                    <f-var value="Ui:選択スキルリストID;" />
                </arg>
                <arg name="Pm:from;" value="Ut:敵作戦;" /><!-- ① -->
                <fnc name="Sf:Where;">
                    <!-- ③ -->
                    <fnc name="Sf:RecCond;">
                       <arg name="Pm:field;" value="ID" /><!-- ④ -->
                       <f-var value="Ui:選択モンスターID;" /><!-- ⑤ -->
                    </fnc>
                </fnc>
            </fnc>
        </data>
        <!--
        ├──────────────────────────────────┤
          ※③脚注
                レコードを選ぶ条件を指定します。
                ID 列（④）が、「Ui:選択モンスターID;」変数（⑤）の
                内容と一致すること。
        ├──────────────────────────────────┤
        ・※②脚注
            別の「Uc:作戦_skillLst;」リストボックス・コントロールで項目を選ぶと
            「Ui:選択スキルリストID;」変数の内容が「10」「11」と変わるようにして
            あり、
            そのリストボックスで「10」を選んでいるときは「PER10」フィールド、
            そのリストボックスで「11」を選んでいるときは「PER11」フィールド、
            といったように、
            そのリストボックスで選んでいる項目によってデータを取り出すフィールド
            を変えるために、
                フィールド名の変わらない部分に<f-str>を、
                フィールド名の変わる部分に    <f-var>を使って、
            フィールド名を可変にしています。
        └──────────────────────────────────┘
        -->


        <!--
          イベントの設定
        ┌──────────────────────────────────┐
            ■
          ■  ■ このコントロールで変更作業をした時（①）。
            ■

              （１）このコントロールの内容を、
                    ［データの設定］で指定した変更先に格納します。
                    
              （２）［トゥゲザーの設定］に名前が挙がっているコントロールを最新
                    の状態にし、このフォームの整合性を取ります。
        -->
        <event name="Se:値変更時;"><!-- ① -->
            <fnc name="Sf:入力値の確定;" /><!-- （１） -->
            <fnc name="Sf:整合性を取る;" /><!-- （２） -->
        </event>
        <!--
        └──────────────────────────────────┘
        -->


        <!--
          トゥゲザーの設定
        ┌──────────────────────────────────┐
              ■
          ■■■  このコントロールで変更作業をした時。
          ■

        -->
                        <!-- ① -->
        <together on="Se:値変更時;" description="IDを変更したとき、名称を再表示。" target="
            Uc:作戦_PER00_Explain;
        " /> <!-- ② -->
        <!--
        ├──────────────────────────────────┤
          ※説明
              ・［イベントの設定］の「Se:値変更時;」（①）の中に書かれてある
                「Sf:整合性を取る;」のタイミングで、名前が挙がっているコントロ
                ール（②）を最新の状態にし、このフォームの整合性を取ります。
          ※説明
              ・リストボックスの場合は、名前の後ろに「*」更新記号を付けること。
                リストボックスは、「更新」をしないと、表示が最新にならない。処
                理の重い再読み込みを行う。
        └──────────────────────────────────┘
        -->
    </control>


</codefile-controls>

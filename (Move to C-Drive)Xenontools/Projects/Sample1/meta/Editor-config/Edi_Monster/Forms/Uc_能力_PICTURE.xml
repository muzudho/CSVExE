<?xml version="1.0" encoding="Shift_JIS" ?>
                                    <!-- ↓このバージョン番号の説明は
                                           Aa_Editor.xml参照 -->
<codefile-controls codefile-version="2.0">


    <!--
      このコントロールの紹介
    ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
        ■
      ■■■ モンスター・グラフィック
        ■
                                        [記号] Uc:能力_PICTURE;
                                        [種類] ピクチャーボックス（C:Pic;）
                                        [画面] メイン画面（Ufo:メイン;）
                                                    （Forms/Ufo_メイン.csv）

                モンスターの画像を
                表示します。

    ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
    -->
    <control>


        <!--
          データの設定
        ┌──────────────────────────────────┐
            ■■
          ■  ■ データ読取元
            ■■
                    モンスター画像フォルダーのパスが入って
                    いる変数の内容
                    ＋
                    選択モンスターID
                    ＋
                    「.png」
                    （※脚注ａ）

          ■■
          ■  ■ データ変更先
          ■■
                    なし。

        -->
        <data access="from" memory="none">
            <f-var value="Up:モンスター画像パス;" /><!-- ② -->
            <f-var value="Ui:選択モンスターID;" /><!-- ②’ -->
            <f-str value=".png" /><!-- ① -->
        </data>
        <!--
        ├──────────────────────────────────┤
        ※脚注ａ
              <f-str>（①）や<f-var>（②、②’）（※脚注１）を続けて連結した文字
              列をファイルパスとして使用し、画像を表示します。
              
            ・文字列の変わらない部分に<f-str>を、
              文字列の変わる部分に    <f-var>を使って、
              文字列を可変にします。
        └──────────────────────────────────┘
        -->


    </control>


</codefile-controls>

<?xml version="1.0" encoding="Shift_JIS" ?>
                                    <!-- ↓このバージョン番号の説明は
                                           Aa_Editor.xml参照 -->
<codefile-controls codefile-version="2.0">


    <!--
      このコントロールの紹介
    ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
        ■
      ■■■ ナンバー
        ■
                                        [記号] Uc:能力_NO;
                                        [種類] 数上下ボックス（C:Num;）
                                        [画面] メイン画面（Ufo:メイン;）
                                                    （Forms/Ufo_メイン.csv）

                モンスターテーブルを保存すると付く自動連番
                を表示します。

    ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
    -->
    <control>


        <!--
          データの設定
        ┌──────────────────────────────────┐
            ■■
          ■  ■ データ読取元
            ■■
                    敵テーブル（①）の、現在選択中の敵モンスターに該当する行（
                    ③※脚注）の、NO 列（②）。

          ■■
          ■  ■ データ変更先
          ■■
                    なし。

        -->
        <data access="from" memory="cell">
            <fnc name="Sf:Cell;">
                <arg name="Pm:select;" value="NO" /><!-- ② -->
                <arg name="Pm:from;" value="Ut:敵;" /><!-- ① -->
                <fnc name="Sf:Where;">
                    <!-- ③ -->
                    <fnc name="Sf:RecCond;">
                       <arg name="Pm:field;" value="NO" /><!-- ④ -->
                       <f-var value="Ui:選択モンスターRNo;" /><!-- ⑤ -->
                    </fnc>
                </fnc>
            </fnc>
        </data>
        <!--
        ├──────────────────────────────────┤
          ※③脚注
                レコードを選ぶ条件を指定します。
                NO 列（④）が、「Ui:選択モンスターRNo;」変数（⑤）の
                内容と一致すること。
        └──────────────────────────────────┘
        -->


    </control>


</codefile-controls>

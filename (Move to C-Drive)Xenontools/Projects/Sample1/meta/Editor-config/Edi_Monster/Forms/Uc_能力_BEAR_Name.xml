<?xml version="1.0" encoding="Shift_JIS" ?>
                                    <!-- ↓このバージョン番号の説明は
                                           Aa_Editor.xml参照 -->
<codefile-controls codefile-version="2.0">


    <!--
      このコントロールの紹介
    ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
        ■
      ■■■ 耐性名テキストエリア
        ■
                                        [記号] Uc:能力_BEAR_Name;
                                        [種類] テキストエリア（C:Txa;）
                                        [画面] メイン画面（Ufo:メイン;）
                                                    （Forms/Ufo_メイン.csv）

                モンスターの耐性の、名前を
                表示します。

    ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
    -->
    <control>


        <!--
          データの設定
        ┌──────────────────────────────────┐
            ■■
          ■  ■ データ読取元
            ■■
                    耐性テーブルの Expl フィールド。
                    ＋
                    「　」
                    ＋
                    耐性テーブルの NAME フィールド。
                    
                    求め方
                        敵テーブルの、現在選択中のモンスタ
                        ーに該当する行の、BEAR 列の値を見て、
                        
                        耐性テーブルの ID 列から一致するレ
                        コードを探し、その Explと、Name 列
                        の値を表示します。

                    （※脚注ａ）

          ■■
          ■  ■ データ変更先
          ■■
                    なし。

        -->
        <data access="from" memory="none">
            <!-- （１） -->
            <fnc name="Sf:Cell;">
                <arg name="Pm:select;" value="Expl" /><!-- ② -->
                <arg name="Pm:from;" value="Ut:耐性;" /><!-- ① -->
                <fnc name="Sf:Where;">
                    <!-- ③ -->
                    <fnc name="Sf:RecCond;">
                        <arg name="Pm:field;" value="ID" /><!-- ④ -->
                        <!-- ⑤ -->
                        <fnc name="Sf:Cell;">
                            <arg name="Pm:select;" value="BEAR" /><!-- ⑦ -->
                            <arg name="Pm:from;" value="Ut:敵;" /><!-- ⑥ -->
                            <fnc name="Sf:Where;">
                                <fnc name="Sf:RecCond;">
                                    <arg name="Pm:field;" value="NO" /><!-- ⑧ -->
                                    <f-var value="Ui:選択モンスターRNo;" /><!-- ⑨ -->
                                </fnc>
                            </fnc>
                        </fnc>
                    </fnc>
                </fnc>
            </fnc>
            <!-- （２） -->
            <f-str value="　" />
            <!-- （３） -->
            <fnc name="Sf:Cell;">
                <arg name="Pm:select;" value="NAME" /><!-- ⑫ -->
                <arg name="Pm:from;" value="Ut:耐性;" /><!-- ⑪ -->
                <fnc name="Sf:Where;">
                    <!-- ⑬ -->
                    <fnc name="Sf:RecCond;">
                        <arg name="Pm:field;" value="ID" /><!-- ⑭ -->
                        <!-- ⑮ -->
                        <fnc name="Sf:Cell;">
                            <arg name="Pm:select;" value="BEAR" /><!-- ⑰ -->
                            <arg name="Pm:from;" value="Ut:敵;" /><!-- ⑯ -->
                            <fnc name="Sf:Where;">
                                <fnc name="Sf:RecCond;">
                                    <arg name="Pm:field;" value="NO" /><!-- ⑱ -->
                                    <f-var value="Ui:選択モンスターRNo;" /><!-- ⑲ -->
                                </fnc>
                            </fnc>
                        </fnc>
                    </fnc>
                </fnc>
            </fnc>
        </data>
        <!--
        ├──────────────────────────────────┤
        ※脚注ａ
                  ・このコントロールは、
                    次の３つの文字列を順番に連結したものを表示します。
                        （１）テーブルから検索した値
                        （２）<f-str>で指定した文字列
                        （３）テーブルから検索した値
        
                  ・（１）は、「Ut:耐性;」テーブル（①）の「Expl」フィールド
                    （②）を検索した値です。
                    レコードを選ぶ条件を指定します。（③）
                  ・ID 列（④）に、見つけたい値（⑤）が入っていること。
                    ⑤の値もまた検索で見つけます。
        
                    ⑤の値を選ぶ方法を指定します。
                        ・「Ut:敵;」テーブル（⑥）の「BEAR」フィールド（⑦）を
                            検索した値です。
                            「NO」フィールド（⑧）に、「Ui:選択モンスターRNo;」
                            変数（⑨）の値が入っているレコードを選びます。
        
                  ・（２）は、全角空白です。
        
                  ・（３）は、「Ut:耐性;」テーブル（⑪）の「NAME」フィールド
                    （⑫）を検索した値です。
                    レコードを選ぶ条件を指定します。（⑬）
                  ・ID 列（⑭）に、見つけたい値（⑮）が入っていること。
                    ⑮の値もまた検索で見つけます。
        
                    ⑮の値を選ぶ方法を指定します。
                        ・「Ut:敵;」テーブル（⑯）の「BEAR」フィールド（⑰）を
                            検索した値です。
                            「NO」フィールド（⑱）に、「Ui:選択モンスターRNo;」
                            変数（⑲）の値が入っているレコードを選びます。
        └──────────────────────────────────┘
        -->


    </control>


</codefile-controls>

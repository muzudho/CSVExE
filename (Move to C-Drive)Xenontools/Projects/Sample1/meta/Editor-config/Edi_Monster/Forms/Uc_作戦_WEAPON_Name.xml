<?xml version="1.0" encoding="Shift_JIS" ?>
                                    <!-- ↓このバージョン番号の説明は
                                           Aa_Editor.xml参照 -->
<codefile-controls codefile-version="2.0">


    <!--
      このコントロールの紹介
    ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
        ■
      ■■■ 武器名
        ■
                                        [記号] Uc:作戦_WEAPON_Name;
                                        [種類] テキストボックス（C:Txt;）
                                        [画面] メイン画面（Ufo:メイン;）
                                                    （Forms/Ufo_メイン.csv）

                モンスターの装備武器の名前を
                表示します。

    ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
    -->
    <control>


        <!--
          データの設定
        ┌──────────────────────────────────┐
            ■■
          ■  ■ データ読取元
            ■■
                    アイテムテーブルの NAME 列。
                    
                    求め方
                        敵作戦テーブルの、現在選択中のモン
                        スターに該当する行の、WEAPON 列の
                        値を見て、
                        
                        アイテムテーブルの ID 列から一致す
                        るレコードを探し、そのNAME 列の値
                        を表示します。
                    （※脚注ａ）

          ■■
          ■  ■ データ変更先
          ■■
                    なし。

        -->
        <data access="from" memory="none">
            <fnc name="Sf:Cell;">
                <arg name="Pm:select;" value="NAME" /><!-- ② -->
                <arg name="Pm:from;" value="Ut:アイテム;" /><!-- ① -->
                <fnc name="Sf:Where;">
                    <!-- ③ -->
                    <fnc name="Sf:RecCond;">
                        <arg name="Pm:field;" value="ID" /><!-- ④ -->
                        <!-- ⑤ -->
                        <fnc name="Sf:Cell;">
                            <arg name="Pm:select;" value="WEAPON" /><!-- ⑦ -->
                            <arg name="Pm:from;" value="Ut:敵作戦;" /><!-- ⑥ -->
                            <fnc name="Sf:Where;">
                                <!-- ⑧ -->
                                <fnc name="Sf:RecCond;">
                                    <arg name="Pm:field;" value="ID" /><!-- ⑨ -->
                                    <f-var value="Ui:選択モンスターID;" /><!-- ⑩ -->
                                </fnc>
                            </fnc>
                        </fnc>
                    </fnc>
                </fnc>
            </fnc>
        </data>
        <!--
        ├──────────────────────────────────┤
        ※脚注ａ
            ・このコントロールは、
              アイテムテーブル（①）の NAME 列（②）を読取します。
            
            ・レコードを選ぶ条件を指定します。（③）
              ID 列（④）と、見つけたい値（⑤）が一致すること。
              ここで、⑤の値は別のテーブルから検索して見つけたものを持ってきます。
            
            ・⑤の値を選ぶ方法を指定します。
              敵作戦テーブル（⑥）の WEAPON 列（⑦）から探しだした値とします。
                
                  ・レコードを選ぶ条件を指定します。（⑧）
                    ID 列（⑨）が、「Ui:選択モンスターID;」変数（⑩）
                    の内容と一致すること。
        └──────────────────────────────────┘
        -->


    </control>


</codefile-controls>
